[Trigger]
Operation = Upgrade
Operation = Install
Operation = Remove
Type = Package
Target = *

[Action]
Depends = rsync
Description = Saving pacman db to /usr because /var is not snapshotted...
When = PostTransaction
Exec = /usr/bin/bash -c 'mkdir -p /usr/var/lib/pacman/local && /usr/bin/rsync -rtv --delete /var/lib/pacman/local/ /usr/var/lib/pacman/local 1>/dev/null'
