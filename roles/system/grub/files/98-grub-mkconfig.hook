[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Operation = Remove
Target = usr/lib/initcpio/*

[Trigger]
Type = Path
Operation = Install
Operation = Upgrade
Target = boot/*

[Trigger]
Type = Package
Operation = Install
Operation = Upgrade
Operation = Remove
Target = linux*

[Action]
Depends = grub
Description = Regenerating grub config
When = PostTransaction
Exec = /usr/bin/bash -c 'grub-mkconfig -o /boot/grub/grub.cfg'
